
<div class="large-container center-block margin-top">  

    <h1>Alertas de <%= current_user.email %></h1>

    <div class="table-responsive margin-top">

      <table class="table table-hover">
        <thead class="table-dark">
          <tr>
            <th>Nombre de la Alerta</th>
            <th>Origen</th>
            <th>Destino</th>
            <th>Clase</th>
            <th>Precio</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @alerts.each do |alert| %>


            <% if alert.user_id == current_user.id %>

            
            



              <tr>
                <td><%= alert.name_alert %></td>
                <td><%= @list_cities.select{|x|x[0] == alert.from_alert}.map{|x| x[1]}  %></td>
                <td><%= @list_cities.select{|x|x[0] == alert.to_alert}.map{|x| x[1]}  %></td>
                <td><input type="hidden"<%= clase = @class_services.find(alert.class_alert) %>><%= clase.title %></td>
                <td><%= alert.price_alert %></td>
                <td><%= link_to 'Ver', alert %></td>
                <td><%= link_to 'Editar', edit_alert_path(alert) %></td>
                <td><%= link_to 'Eliminar', alert, method: :delete, data: { confirm: 'Â¿Esta seguro?' } %></td>
              </tr>
            <% end %>
          <% end %>
        </tbody>
      </table>
    </div>

    <br>

    <%= link_to 'Nueva Alerta', new_alert_path , class: "btn btn-outline-primary"%>
  </div>
